<script>
    // Numaratör ve buton referansları alınıyor
    const minusButton = document.querySelector('.fa-minus');
    const plusButton = document.querySelector('.fa-plus');
    const quantityDisplay = document.getElementById('quantity');

    // Başlangıç değeri
    let quantity = 1;
    quantityDisplay.textContent = quantity;

    // Arttırma fonksiyonu
    plusButton.addEventListener('click', () => {
        if (quantity < 3) { // Maksimum değer kontrolü (örneğin, 3 olarak belirlendi)
            quantity++;
            quantityDisplay.textContent = quantity;
        }
    });

    // Azaltma fonksiyonu
    minusButton.addEventListener('click', () => {
        if (quantity > 1) { // Minimum değer kontrolü (örneğin, 1 olarak belirlendi)
            quantity--;
            quantityDisplay.textContent = quantity;
        }
    });
</script>