@using KatmanliBurger_DATA.Concretes;
@model Tuple<Burger, IEnumerable<Garniture>,IEnumerable<Garniture>>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Burger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item1.Name" class="control-label"></label>
                <input asp-for="Item1.Name" class="form-control" />
                <span asp-validation-for="Item1.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.Description" class="control-label"></label>
                <input asp-for="Item1.Description" class="form-control" />
                <span asp-validation-for="Item1.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.Price" class="control-label"></label>
                <input asp-for="Item1.Price" class="form-control" />
                <span asp-validation-for="Item1.Price" class="text-danger"></span>
            </div>
           
            <div>

                @foreach (var item in Model.Item3.ToList())
                {
                    <div>

                        @if (Model.Item2.Any(x=>x.Id==item.Id))
                        {
                            <input type="checkbox" name="SelectedGarnitures" value="@item.Id" checked/>
                        }
                        else
                        {
                            <input type="checkbox" name="SelectedGarnitures" value="@item.Id" />
                        }

                        <label>@item.Name</label>

                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
