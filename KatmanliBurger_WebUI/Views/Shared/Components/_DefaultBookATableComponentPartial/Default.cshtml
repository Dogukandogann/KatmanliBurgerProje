@model CustomerMessage
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Ulaşın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="Create" asp-controller="CustomerMessage" method="post">
                        <div>
                            <input asp-for="CustomerName" type="text" class="form-control" placeholder="Ad" />
                        </div>
                        <div>
                            <input asp-for="CustomerPhone" type="text" class="form-control" placeholder="Telefon Numarası" />
                        </div>
                        <div>
                            <input asp-for="CustomerEmail"  type="email" class="form-control" placeholder="E-posta" />
                        </div>
                        <div>
                            <textarea asp-for="Message"  class="form-control" style="height:150px" placeholder="Mesajınız"></textarea>
                        </div>
                        <div class="btn_box">
                            <button type="submit" >
                                Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>