@model UserVM
<link href='https://fonts.googleapis.com/css?family=Dancing Script' rel='stylesheet'>
<style>
    .btnx {
        border: none;
        text-transform: uppercase;
        padding: 10px 55px;
        background-color: #ffbe33;
        color: #ffffff;
        border-radius: 45px;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        border: none;
    }
</style>
<div class="row text-white justify-content-center" style="background:#222831; height:1000px">
    <div class="col-7" style="margin-top:95px">
        <img src="~/feane-1.0.0/images/about-img.png" alt="" style="margin-left:10px">
    </div>

    <div class="col-5 ">
        <div class="row " style="margin-top:290px">
            <h2 style="font-family: 'Dancing Script';font-size: 60px;">
                Katmanlı Burger
            </h2>
        </div>
        <div class="row">
            <div class="col-md-10 justify-content-center mt-5">
                <form asp-action="Index">
                    <div class="row col-md-11">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">E-Posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Şifre</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Giriş Yap" class="btn btnx " id="btnx" asp-route="" />
                        <a asp-controller="Register" asp-action="Register" class="btn btnx" id="btnx">Kayıt Ol</a>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
