@model List<Menu>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hamburger İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hamburger işlemlerini aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Burger Adı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Resim</th>
									<th scope="col">Durum</th>
									<th scope="col">Akif/Pasif</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Name</td>
										<td>@item.Description</td>
										<td>@item.Price</td>
										<td>@item.Image</td>
										<td>@item.Status</td>
										@if (item.Status == KatmanliBurger_DATA.Enums.Status.Active)
										{
											<td><a href="/Menu/Delete/@item.Id" class="btn btn-outline-danger">Pasifleştir</a></td>
										}
										else
										{
											<td><a href="/Menu/Delete/@item.Id" class="btn btn-outline-success">Aktifleştir</a></td>
										}
										<td><a href="/Menu/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Menu/Create/" class="btn btn-outline-primary">Yeni Menü Oluştur</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






