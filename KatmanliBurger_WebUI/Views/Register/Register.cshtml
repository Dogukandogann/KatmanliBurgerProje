@model UserRegisterVM
<link href='https://fonts.googleapis.com/css?family=Dancing Script' rel='stylesheet'>
<style>
    .btnx {
        border: none;
        text-transform: uppercase;
        padding: 10px 55px;
        background-color: #ffbe33;
        color: #ffffff;
        border-radius: 45px;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        border: none;
    }

    .responsive {
        width: 60%;
        height: auto;
    }
</style>
<div class="row text-white justify-content-center main-header fixed-top" style="background:#222831; height:1000px">
    <div class="col-7" style="margin-top:30px">
        <img src="~/feane-1.0.0/images/about-img.png" class="responsive" alt="" style="margin-left:100px">
    </div>

    <div class="col-5 ">
        <div class="row " style="margin-top:40px">
            <h2 style="font-family: 'Dancing Script';font-size: 30px;">
                Katmanlı Burger
            </h2>
        </div>
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Register">
                    <div class="row col-md-11">

                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="LastName" class="control-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Email" class="control-label">E-Posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Adress" class="control-label">Adres</label>
                            <input asp-for="Adress" class="form-control" />
                            <span asp-validation-for="Adress" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Password" class="control-label">Şifre</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="ConfirmPassword" class="control-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Kayıt Ol" class=" btn btnx" id="btnx" />
                        <a class="btn btnx" id="btnx" asp-controller="Login" asp-action="Index">Giriş Yap</a>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["exception"] != null)
    {
        <text>
            Swal.fire("@TempData["exception"]");
        </text>
    }
    @if (TempData["hata"] != null)
    {
        <text>
            Swal.fire("@TempData["hata"]");
        </text>
    }
</script>